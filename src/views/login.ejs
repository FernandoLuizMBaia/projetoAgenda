<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Criar conta ou Entrar</h1>
                    <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

                    <%- include('includes/messages') %>

                        <div class="row">

                            <div class="col-lg">
                                <h4>Faça seu cadastro</h4>
                                <p>Se não possui conta, preencha o formulário abaixo:</p>

                                <form action="/login/register" method="POST">
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                    <div class="form-group">
                                        <label>Mete o Email</label>
                                        <input type="email" class="form-control" name="email" placeholder="Email">
                                    </div>

                                    <div class="form-group">
                                        <label>Sua senha</label>
                                        <input type="password" class="form-control" name="password"
                                            placeholder="Password">
                                        <small id="emailHelp" class="form-text text-muted">Irmão confia que
                                            taseguro.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Criar minha conta</button>
                                </form>
                            </div>

                            <div class="col-lg">
                                <h4>Fazer seu login</h4>
                                <p>Se já possui conta, faça login abaixo:</p>

                                <form action="/login/login" method="POST">
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                    <div class="form-group">
                                        <label>Mete o Email</label>
                                        <input type="email" class="form-control" name="email" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label>Sua senha</label>
                                        <input type="password" class="form-control" name="password"
                                            placeholder="Password">
                                        <small id="emailHelp" class="form-text text-muted">Irmão, confia que
                                            taseguro.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Entrar</button>
                                </form>
                            </div>

                        </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer') %>